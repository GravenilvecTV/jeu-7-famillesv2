generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Game {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  players   Player[]
  state     String   // JSON: deck, hands, etc.
}

model Player {
  id      Int    @id @default(autoincrement())
  name    String
  game    Game   @relation(fields: [gameId], references: [id])
  gameId  Int
}
